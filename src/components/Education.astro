---
interface Props {
  education: EducationItem[];
}
const { education } = Astro.props;
---

{
  education.map(({ name, imageURL, degree, date, url }) => (
    <div class="flex mb-6 last:mb-10">
      <img
        src={imageURL}
        alt={`${name} logo`}
        class="w-20 h-20 object-contain bg-[#454648] rounded-md mr-4"
      />
      <div class="flex flex-col">
        <a href={url} target="_blank">
          <h3 class="text-xl font-bold text-yellow-400">{name}</h3>
        </a>
        <h4 class="text-xl font-semibold text-gray-600 dark:text-white/70">
          {degree}
        </h4>
        <date class="text-sm text-gray-600/80 dark:text-white/80">{date}</date>
      </div>
    </div>
  ))
}
