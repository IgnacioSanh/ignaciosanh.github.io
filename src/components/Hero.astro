---
import Badge from "./Badge.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      src="/avatar.webp"
      alt="Ignacio Sanhueza"
      class="rounded-full shadow-lg size-16"
    />
    <a
      href="https://www.linkedin.com/in/ignacio-sanhueza-94419652/"
      target="_blank"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>{t("hero.available_for_work")}</Badge>
    </a>
  </div>
  <h1 class="text-4xl font-bold tracking-tight text-gray-800 dark:text-white">
    {t("hero.greeting")}
  </h1>
  <p
    set:html={t("hero.description")}
    class="mt-6 text-xl text-gray-800 dark:text-gray-300 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold"
  />
</div>
